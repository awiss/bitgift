{
  "manifest_version": 2,
  "name": "BitBuy",
  "description": "Pay for everything with Bitcoin",
  "version": "0.1",
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["https://www.amazon.com/gp/buy/*"],
      "js": ["jquery.min.js", "store.js", "dom.js", "content.js"]
    }
  ],
  "web_accessible_resources": ["amazon.css"],
  "permissions": [
    "tabs", "http://localhost:2000/*"
  ]
}
